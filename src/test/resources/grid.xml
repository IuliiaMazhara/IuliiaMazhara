<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Grid suite for Google search page" parallel="tests">

  <parameter name="hub" value="http://192.168.1.3:4444/wd/hub"/>

  <test name="chrome tests" group-by-instances="true">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="com.epam.tc.grid.GoogleSearchMainPageTest"/>
    </classes>
  </test>

  <test name="firefox tests" group-by-instances="true">
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="com.epam.tc.grid.GoogleSearchMainPageTest"/>
    </classes>
  </test>

  <test name="opera tests" group-by-instances="true">
    <parameter name="browser" value="operablink"/>
    <classes>
      <class name="com.epam.tc.grid.GoogleSearchMainPageTest"/>
    </classes>
  </test>

</suite>
